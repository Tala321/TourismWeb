@model TourismWebProject.Models.ContactViewModel

@{
    ViewBag.Title = "Index";
}

@foreach(var item in Model.contactPage)
{ 
    <div class="hero-wrap js-fullheight" style="background-image: url(/Assets/images/@item.ContactBackPic);">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
                <div class="col-md-9 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                    <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="~/Public/Home/Index">Home</a></span> <span>Contact</span></p>
                    <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">@item.ContactBackPicText</h1>
                </div>
            </div>
        </div>
    </div>
}


<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h4">Contact Information</h2>
            </div>
            <div class="w-100"></div>
            @foreach (var item in Model.contactPage)
            {
                <div class="col-md-3">
                    <p><span>Address:</span> @item.ContactAddress</p>
                </div>
                <div class="col-md-3">
                    <p><span>Phone:</span> <a href="tel://@item.ContactPhone">@item.ContactPhone</a></p>
                </div>
                <div class="col-md-4">
                    <p><span>Email:</span> <a href="mailto:@item.ContactEmail">@item.ContactEmail</a></p>
                </div>
            }
        </div>
        <div class="row block-9">
            <div class="col-md-6 pr-md-5">
                @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
                {
                          
                        <div class="form-group">
                            <input type="text" class="form-control" name="ContactFormName.UserId" value="1">
                        </div>
                    
                    <div class="form-group">
                        <input type="text" class="form-control" name="ContactFormName" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="ContactFormEmail" placeholder="Your Email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="ContactFormSubject" placeholder="Subject">
                    </div>
                    <div class="form-group">
                        <textarea name="ContactFormMessage" id="" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                    </div>
                }
            </div>
            @foreach (var item in Model.contactPage)
            {
                <div class="col-md-6" id="map"><iframe @item.ContactOfficeLocation></iframe></div>
                }
            </div>
    </div>
</section>

