@model TourismWebProject.Models.AboutViewModel

@{
    ViewBag.Title = "About";
}


@foreach (var item in Model.AboutPage.ToList())
{
    <div class="hero-wrap js-fullheight" style="background-image: url(/Assets/images/@item.AboutPageBackPic);">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
                <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                    <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="~/Public/Home/Index">Home</a></span> <span>About</span></p>
                    <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">@item.AboutPageBackPicText</h1>
                </div>
            </div>
        </div>
    </div>
}


<section class="ftco-section">
    <div class="container">
        <div class="row d-md-flex">
            <div class="col-md-6 ftco-animate img about-image" style="background-image: url(/Assets/images/@Model.AboutPage.First().AboutPagePic);">
            </div>
            <div class="col-md-6 ftco-animate p-md-5">
                <div class="row">
                    <div class="col-md-12 nav-link-wrap mb-5">
                        <div class="nav ftco-animate nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="v-pills-whatwedo-tab" data-toggle="pill" href="#v-pills-whatwedo" role="tab" aria-controls="v-pills-whatwedo" aria-selected="true">@Model.AboutItem.First().AboutHeading</a>
                            <a class="nav-link" id="v-pills-mission-tab" data-toggle="pill" href="#v-pills-mission" role="tab" aria-controls="v-pills-mission" aria-selected="false">@Model.AboutItem.OrderByDescending(x => x.AboutId).Skip(1).First().AboutHeading</a>
                            <a class="nav-link" id="v-pills-goal-tab" data-toggle="pill" href="#v-pills-goal" role="tab" aria-controls="v-pills-goal" aria-selected="false">@Model.AboutItem.OrderByDescending(x => x.AboutId).First().AboutHeading</a>
                        </div>
                    </div>
                    <div class="col-md-12 d-flex align-items-center">
                        <div class="tab-content ftco-animate" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-whatwedo" role="tabpanel" aria-labelledby="v-pills-whatwedo-tab">
                                <div>
                                    <h2 class="mb-4">@Model.AboutItem.First().AboutSubHeading</h2>
                                    <p>@Model.AboutItem.First().AboutText.Split('.').First() .</p>
                                    <p>@Model.AboutItem.First().AboutText.Split('.')[1] @Model.AboutItem.First().AboutText.Split('.')[2] @Model.AboutItem.First().AboutText.Split('.')[3] .</p>

                                </div>
                            </div>
                            <div class="tab-pane fade" id="v-pills-mission" role="tabpanel" aria-labelledby="v-pills-mission-tab">
                                <div>
                                    <h2 class="mb-4">@Model.AboutItem.OrderByDescending(x => x.AboutId).Skip(1).First().AboutSubHeading</h2>
                                    <p>@Model.AboutItem.OrderByDescending(x => x.AboutId).Skip(1).First().AboutText.Split('.').First() .</p>
                                    <p>@Model.AboutItem.OrderByDescending(x => x.AboutId).Skip(1).First().AboutText.Split('.')[1] @Model.AboutItem.OrderByDescending(x => x.AboutId).Skip(1).First().AboutText.Split('.')[2] @Model.AboutItem.First().AboutText.Split('.')[3] .</p>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="v-pills-goal" role="tabpanel" aria-labelledby="v-pills-goal-tab">
                                <div>
                                    <h2 class="mb-4">@Model.AboutItem.OrderByDescending(x => x.AboutId).First().AboutSubHeading</h2>
                                    <p>@Model.AboutItem.OrderByDescending(x => x.AboutId).First().AboutText.Split('.').First() .</p>
                                    <p>@Model.AboutItem.OrderByDescending(x => x.AboutId).First().AboutText.Split('.')[1] @Model.AboutItem.OrderByDescending(x => x.AboutId).First().AboutText.Split('.')[2] @Model.AboutItem.First().AboutText.Split('.')[3] .</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-start mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate">
                <span class="subheading">FAQS</span>
                <h2 class="mb-4"><strong>Frequently</strong> Ask Question</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div id="accordion">
                    <div class="row">
                        @foreach (var item in Model.Faqs)
                        {
                            if (item.FaqId % 4 == 0 || item.FaqId == 1)
                            {@:<div class="col-md-6">
                                }
                                <div class="card">
                                    <div class="card-header">
                                        <a class="card-link " data-toggle="collapse" href="#@item.FaqId" aria-expanded="false" aria-controls="@item.FaqId">@item.FaqQuestion <span class="collapsed"><i class="icon-plus-circle"></i></span><span class="expanded"><i class="icon-minus-circle"></i></span></a>
                                    </div>
                                    <div id="@item.FaqId" class="collapse ">
                                        <div class="card-body">
                                            <p>@item.FaqAnswer</p>
                                        </div>
                                    </div>
                                </div>
                                if (item.FaqId % 3 == 0)
                                { @:</div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
</section>

