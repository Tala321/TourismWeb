
@{
    ViewBag.Title = "ItemEdit";
}
<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table " id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> About page item part</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            @using (Html.BeginForm("ItemEdit", "About", FormMethod.Post))
                            {
                                <div class="form-group ">
                                    <label for="AboutHeading">About Heading</label>
                                    <input type="text" class="form-control" name="AboutHeading" value='@ViewData["AboutHeading"]'>
                                </div>
                                <div class="form-group">
                                    <label for="AboutSubHeading">About SubHeading</label>
                                    <input type="text" class="form-control" name="AboutSubHeading" value='@ViewData["AboutSubHeading"]'>
                                </div>
                                <div class="form-group ">
                                    <label for="AboutText">About Text</label>
                                    <input type="text" class="form-control" name="AboutText" value='@ViewData["AboutText"]'>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }

                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


