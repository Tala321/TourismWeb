
@{
    ViewBag.Title = "FaqEdit";
}

<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table " id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> About page item part</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            @using (Html.BeginForm("FaqEdit", "About", FormMethod.Post))
                            {
                                <div class="form-group ">
                                    <label for="FaqQuestion">Question</label>
                                    <input type="text" required="" class="form-control" name="FaqQuestion" value='@ViewData["FaqQuestion"]'>
                                </div>
                                <div class="form-group">
                                    <label for="FaqAnswer">Answer</label>
                                    <input type="text" required=""  class="form-control" name="FaqAnswer" value='@ViewData["FaqAnswer"]'>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



