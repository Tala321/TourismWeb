
@{
    ViewBag.Title = "RoomCreate";
}

<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table " id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Create a room</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            @using (Html.BeginForm("RoomCreate", "Hotels", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group ">
                                    <label for="RoomName"> Name:</label>
                                    <input type="text"  required=""  class="form-control" name="RoomName" >
                                </div>
                                <div class="form-group ">
                                    <label for="RoomPrice"> Price:</label>
                                    <input type="text"  required=""  class="form-control" name="RoomPrice" >
                                </div>
                                <div class="form-group ">
                                    <label for="RoomCapacity">Capacity:</label>
                                    <input type='text'  required=""  class="form-control"  name="RoomCapacity" />
                                </div>
                                <div class="form-group ">
                                    <label for="RoomPic"> Room photo :</label>
                                    <input type='file'  required=""  name="RoomPic" />
                                </div>
                                <div class="form-group ">
                                    <label for="RoomDescription"> Description:</label><br />
                                    <textarea type='text'  required=""  width="100%" name="RoomDescription" style="width: 100%;"></textarea>
                                </div>
                                <div class="form-group ">
                                    <label for="RoomStatus"> Status:</label>
                                    @Html.DropDownList("RoomStatus", new SelectList(ViewBag.Statuses, "StatusId", "StatusName"), new { @class = "form-control" })
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




