@model IEnumerable<TourismWebProject.Models.Location>
@{
    ViewBag.Title = "Index";
}

@*Locations*@
<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong>Locations</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Country</th>
                                    <th scope="col">City</th>
                                    <th scope="col">Options</th>
                                    <td>@Html.ActionLink("Add", "AddLocation", "Location", new { @class = "btn btn-primary" })</td>

                                </tr>
                            </thead>
                            @foreach(var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.LocationId</td>
                                        <td>@item.LocationCountryName</td>
                                        <td>@item.LocationCityName</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




