@model TourismWebProject.Models.ContactViewModel

@{
                /**/

                ViewBag.Title = "Index";
}

@*Contact Page Main Part*@
<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Contact Page Main Part</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Background Picture</th>
                                    <th scope="col">Background Picture Text</th>
                                    <th scope="col">Adress</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Location</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.contactPage)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.ContactId</td>
                                        <td>@item.ContactBackPic</td>
                                        <td>@item.ContactBackPicText</td>
                                        <td>@item.ContactAddress.Split(',')[0]...</td>
                                        <td>@item.ContactPhone</td>
                                        <td>@item.ContactEmail</td>
                                        <td>@item.ContactOfficeLocation.Split('=')[0]...</td>
                                        <td>@Html.ActionLink("Edit", "MainEdit", "Contact", new { id = item.ContactId }, new { @class = "btn btn-primary" })</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>


        @*Contact Page Items Part*@
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Contact Form  </strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">User type</th>
                                    <th scope="col">Name</th>
                                    <th scope="col"> Subject</th>
                                    <th scope="col">Message</th>
                                    <th scope="col">Email</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.contactForm)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.ContactFormId</td>
                                        @if (@item.UserId == 0)
                                        {
                                            <td>Guest</td>
                                        }
                                        else
                                        {
                                            <td>@item.UserId</td>
                                        }
                                        <td>@item.ContactFormName</td>
                                        <td>@item.ContactFormSubject</td>
                                        <td>@item.ContactFormMessage</td>
                                        <td>@item.ContactFormEmail</td>
                                        <td>@Html.ActionLink("Respond", "ContactForm", "Contact", new { id = item.ContactFormId }, new { @class = "btn btn-primary" })</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>

