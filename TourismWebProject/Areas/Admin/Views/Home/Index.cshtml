@model IEnumerable<TourismWebProject.Models.HomePage>

@{
    /**/

    ViewBag.Title = "Index";
}


@*Home Page  *@
<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Home page</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">Background Picture</th>
                                    <th scope="col">Background Picture Heading</th>
                                    <th scope="col">Background Picture Text</th>
                                    <th scope="col">Testimonial Heading</th>
                                    <th scope="col">Testimonial Text</th>
                                    <th scope="col">News Letter Heading</th>
                                    <th scope="col">News Letter Text</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.HomeBackPic</td>
                                        <td>@item.HomeHeading</td>
                                        <td>@item.HomeText.Split(',')[0]...</td>
                                        <td>@item.TestimonialHeading</td>
                                        <td>@item.TestimonialText.Split(',')[0]...</td>
                                        <td>@item.NewsLetterHeading</td>
                                        <td>@item.NewsLetterText.Split(',')[0]...</td>
                                        <td>@Html.ActionLink("Edit", "MainEdit", "Home", new { id = item.HomeId }, new { @class = "btn btn-primary" })</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
