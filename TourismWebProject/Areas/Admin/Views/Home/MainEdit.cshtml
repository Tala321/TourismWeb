
@{
    ViewBag.Title = "MainEdit";
}

<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table " id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Home page </strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            @using (Html.BeginForm("MainEdit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group ">
                                    <label for="HomeBackPic">Background Picture </label>
                                    <input type="file" class="form-control" name="HomeBackPic">
                                </div>
                                <div class="form-group ">
                                    <label for="HomeHeading"> Background Picture Heading</label>
                                    <input type="text"  required=""  class="form-control" name="HomeHeading" value="@ViewData["HomeHeading"] ">
                                </div>
                                <div class="form-group ">
                                    <label for="HomeText">Background Picture Text</label>
                                    <textarea type="textarea"  required=""  class="form-control" name="HomeText">@ViewData["HomeText"]</textarea>
                                </div>
                                <div class="form-group ">
                                    <label for="TestimonialHeading">Testimonial Heading</label>
                                    <input type="text"  required=""  class="form-control" name="TestimonialHeading" value="@ViewData["TestimonialHeading"]">
                                </div>
                                <div class="form-group ">
                                    <label for="TestimonialText">Testimonial Text</label>
                                    <textarea type="textarea"  required=""  class="form-control" name="TestimonialText">@ViewData["TestimonialText"]</textarea>
                                </div>
                                <div class="form-group ">
                                    <label for="NewsLetterHeading">News Letter Heading</label>
                                    <input type="text"  required=""  class="form-control" name="NewsLetterHeading" value="@ViewData["NewsLetterHeading"] ">
                                </div>
                                <div class="form-group ">
                                    <label for="NewsLetterText">News Letter Heading</label>
                                    <textarea type="textarea"  required=""  class="form-control" name="NewsLetterText">@ViewData["NewsLetterText"]</textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





