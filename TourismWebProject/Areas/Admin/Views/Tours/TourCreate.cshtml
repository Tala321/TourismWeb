
@{
    ViewBag.Title = "TourCreate";
}

<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table " id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Add a tour</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            @using (Html.BeginForm("TourCreate", "Tours", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group ">
                                    <label for="TourPic"> Photo:</label><br />
                                    <input type='file'  required=""  name="TourPic" />
                                </div>
                                <div class="form-group ">
                                    <label for="TourName"> Name:</label><br />
                                    <input type="text"  required=""  class="form-control" name="TourName">
                                </div>
                                <div class="form-group ">
                                    <label for="TourPrice"> Price:</label><br />
                                    <input type="text"  required=""  class="form-control" name="TourPrice">
                                </div>
                                <div class="form-group ">
                                    <label for="DateFrom"> Format:(year/month/day)</label><br />
                                    <label for="DateFrom"> From:</label><br />
                                    <input type='text'  required=""  class="form-control" name="DateFrom" />
                                </div>
                                <div class="form-group ">
                                    <label for="DateTo"> To :</label><br />
                                    <input type='text'  required=""  class="form-control" name="DateTo" />
                                </div>
                                <div class="form-group ">
                                    <label for="HotelId"> Hotel:</label><br />
                                    @Html.DropDownList("HotelId", new SelectList(ViewBag.Hotels, "HotelId", "HotelName"), new { @class = "form-control" })
                                </div>
                                <div class="form-group ">
                                    <label for="TourDescription"> Description:</label><br />
                                    <textarea type='text'  required=""  class="form-control" width="100%" name="TourDescription" style="width: 100%;"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


