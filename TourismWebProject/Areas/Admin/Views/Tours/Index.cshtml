@model TourismWebProject.Models.TourViewModel

@{
    ViewBag.Title = "Index";
}

@*Tour Page Main Part*@
<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Tour page main part</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Background Picture</th>
                                    <th scope="col">Background Picture Text</th>
                                    <th scope="col">Options</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.TourPage)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.ToursPageId</td>
                                        <td>@item.ToursPageBackPicText</td>
                                        <td>@item.ToursPageBackPic</td>
                                        <td>@Html.ActionLink("Edit", "MainEdit", "Tours", new { id = @item.ToursPageId }, new { @class = "btn btn-primary" })</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Tour  part</strong><br/>
                    <small>if you don't see your tour after adding/editing ,please check entred data and availability of the hotel on the dates</small>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">From</th>
                                    <th scope="col">To</th>
                                    <th scope="col">Hotel</th>
                                    <th scope="col">Photo</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Options:@Html.ActionLink("Add", "TourCreate", "Tours", new { @class = "btn btn-primary" })</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.Tour)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.TourId</td>
                                        <td>@item.TourName</td>
                                        <td>@item.TourPrice</td>
                                        <td>@item.TourDescription.Split('.')[0]...</td>
                                        <td>@item.DateFrom.ToString("dd/MM/yyyy")</td>
                                        <td>@item.DateTo.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Hotel.HotelName</td>
                                        <td>@item.TourPic</td>
                                        <td>@item.TourStatus</td>
                                        <td>@Html.ActionLink("Edit", "TourEdit", "Tours", new { id = @item.TourId }, new { @class = "btn btn-primary" })</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

