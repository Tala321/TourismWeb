
@{
    ViewBag.Title = "TourEdit";
}

<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table " id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Add a tour</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            @using (Html.BeginForm("TourEdit", "Tours", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group ">
                                    <label for="TourPic"> Photo:</label><br />
                                    <input type='file' name="TourPic" />
                                </div>
                                <div class="form-group ">
                                    <label for="TourName"> Name:</label><br />
                                    <input type="text"  required=""  class="form-control" name="TourName" value="@ViewData["TourName"]">
                                </div>
                                <div class="form-group ">
                                    <label for="TourPrice"> Price:</label><br />
                                    <input type="text"  required=""  class="form-control" name="TourPrice" value="@ViewData["TourPrice"] ">
                                </div>
                                <div class="form-group ">
                                    <label for="TourDescription"> Description:</label><br />
                                    <textarea type='text'  required=""  class="form-control" width="100%" name="TourDescription" style="width: 100%;">@ViewData["HotelDescription"] </textarea>
                                </div>
                                <div class="form-group ">
                                    <label for="HotelId"> Status:</label><br />
                                    @Html.DropDownList("TourStatus", new SelectList(ViewBag.Statuses, "StatusId", "StatusName"), new { @class = "form-control" })
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



