@model TourismWebProject.Models.BlogViewModel

@{
    ViewBag.Title = "Index";
}

@*Blog Page Main Part*@
<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Blog page main part</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Background Picture</th>
                                    <th scope="col">Background Picture Text</th>
                                    <th scope="col">Options</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.blogPage)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.BlogId</td>
                                        <td>@item.BlogBackPicText</td>
                                        <td>@item.BlogtBackPic</td>
                                        <td>@Html.ActionLink("Edit", "MainEdit", "Blogs", new { id = item.BlogId }, new { @class = "btn btn-primary" })</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>


        @*Blog Page Items Part*@
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Blog page items part</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Source</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Cover photo</th>
                                    <th scope="col">Category Id</th>
                                    <th scope="col">Author</th>
                                    <th scope="col">Options:@Html.ActionLink("Add", "BlogItemCreate", "Blogs", new { @class = "btn btn-primary" })</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.blogItems)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.BlogItemId</td>
                                        <td>@item.BlogItemSource</td>
                                        <td>@item.BlogItemTitle</td>
                                        <td>@item.BlogItemCover</td>
                                        <td>@item.BlogCategoryId</td>
                                        <td>@item.BlogItemAuthor</td>
                                        <td>@Html.ActionLink("Edit", "BlogItemEdit", "Blogs", new { id = item.BlogItemId }, new { @class = "btn btn-primary" })</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>

        @*Blog Page Categories Part*@
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Blog page category part</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Category name</th>
                                    <th scope="col">Options:@Html.ActionLink("Add", "CategoryCreate", "Blogs", new { @class = "btn btn-primary" })</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.blogCategories)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.BlogCategoryId</td>
                                        <td>@item.BlogCategoryName</td>
                                        <td>@Html.ActionLink("Edit", "CategoryEdit", "Blogs", new { id = item.BlogCategoryId }, new { @class = "btn btn-primary" })</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>

        @*Blog Page Comment Part*@
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Blog page Comment part</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Comment Date</th>
                                    <th scope="col">User Id</th>
                                    <th scope="col">Blog item Id</th>
                                    <th scope="col">Text</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.comments)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.CommentId</td>
                                        <td>@item.CommentDate.ToString("dd/MM/yyyy")</td>
                                        <td>@item.UserId</td>
                                        <td>@item.BlogItemId</td>
                                        <td>@item.CommentText</td>
                                        <td>@item.Status</td>
                                        <td>@Html.ActionLink("Check", "Comment", "Blogs", new { id = item.CommentId }, new { @class = "btn btn-primary" })</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

