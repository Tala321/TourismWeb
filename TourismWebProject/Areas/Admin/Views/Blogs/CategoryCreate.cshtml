
@{
    ViewBag.Title = "CategoryCreaete";
}


<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table " id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Blog page Category part</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            @using (Html.BeginForm("CategoryCreate", "Blogs", FormMethod.Post))
                            {
                                <div class="form-group ">
                                    <label for="BlogCategoryName">Category name</label>
                                    <input type="text" class="form-control" name="BlogCategoryName">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }
                           
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






