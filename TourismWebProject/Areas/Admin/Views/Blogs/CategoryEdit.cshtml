
@{
    ViewBag.Title = "CategoryEdit";
}

<div id="wrapper">
    @Html.Partial("SideBarPartial")
    <div id="content-wrapper">
        <table " id="dataTable"></table>
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <strong> Contact  form</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <table class="table table-striped  " id="dataTable" width="100%" cellspacing="0">
                            @using (Html.BeginForm("CategoryEdit", "Blogs", FormMethod.Post))
                            {                               
                               <div class="form-group ">
                                    <label for="BlogCategoryName"><strong>Category name</strong></label>
                                    <textarea type="text"  required=""  class="form-control" name="BlogCategoryName">@ViewData["BlogCategoryName"] </textarea>
                                </div>                            
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






